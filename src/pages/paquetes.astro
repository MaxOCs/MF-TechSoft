---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import presenciaImg from '../assets/images/presencia-web.png';
import empresarialImg from '../assets/images/petology.jpeg';
import prosuiteImg from '../assets/images/spa.webp';

const paquetes = [
  {
    title: "Web Presencia",
    description: "Ideal para emprendedores que buscan tener presencia online de forma profesional.",
    img: presenciaImg,
    features: [
      "Diseño de hasta 5 secciones",
      "Responsive Design",
      "Formulario de contacto",
      "1 correo empresarial",
      "Dominio + SSL incluido"
    ]
  },
  {
    title: "Web Empresarial",
    description: "Pensado para negocios que buscan crecer con herramientas administrativas básicas.",
    img: empresarialImg,
    features: [
      "Hasta 6 secciones",
      "1 o 2 módulos administrativos",
      "Integración con WhatsApp",
      "3 correos empresariales",
      "Panel básico de administración"
    ]
  },
  {
    title: "Web ProSuite",
    description: "Desarrollo completo y a medida para empresas que necesitan un sistema personalizado.",
    img: prosuiteImg,
    features: [
      "Software a medida (ERP, CRM, etc.)",
      "Panel administrativo avanzado",
      "Usuarios con roles y permisos",
      "API Integrations",
      "10 correos empresariales"
    ]
  }
];
---

<Layout title="Paquetes de Desarrollo Web | Teyco">
  <section id="paquetes" class="bg-gray-100 py-16 md:py-24">
    <div class="container mx-auto px-4">
      <!-- Encabezado -->
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-primary-800 mb-4">
          Nuestros <span class="text-accent-500">Paquetes</span>
        </h2>
        <p class="text-xl text-gray-700 max-w-2xl mx-auto">
          Elige el paquete que mejor se adapte a las necesidades de tu negocio
        </p>
      </div>

      <!-- Grid de Paquetes -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {paquetes.map((service) => (
          <ServiceCard service={service} />
        ))}
      </div>

      <!-- CTA -->
      <div class="text-center mt-16">
        <a href="/contacto" class="bg-accent-500 hover:bg-accent-400 text-white px-8 py-3 rounded-lg text-lg font-medium transition duration-300 inline-block">
          Solicitar Presupuesto
        </a>
      </div>
    </div>

     <!-- Servicios de Equipos -->
  <!-- Servicios de Equipos -->
        <div class="mt-24">
          <div class="text-center mb-12">
            <h3 class="text-2xl md:text-3xl font-bold text-primary-800 mb-4">
              Servicios de <span class="text-accent-500">Equipos</span>
            </h3>
            <p class="text-lg text-gray-700 max-w-xl mx-auto">
              Opciones flexibles para mantenimiento, armado y soluciones empresariales y personales .
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Mantenimiento Equipos -->
            <div class="bg-white rounded-2xl shadow-lg p-6 text-center hover:shadow-xl transition">
              <div class="flex justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-20 h-20 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-computer-icon lucide-computer"><rect width="14" height="8" x="5" y="2" rx="2"/><rect width="20" height="8" x="2" y="14" rx="2"/><path d="M6 18h2"/><path d="M12 18h6"/></svg>
              </div>
              <h4 class="text-xl font-semibold text-primary-800 mb-2">Mantenimiento de Equipos</h4>
              <p class="text-gray-600 mb-4">Ideal para oficinas con múltiples computadoras.</p>
              <ul class="text-sm text-gray-700 space-y-1 mb-4">
                <li>+10 equipos → Precio especial</li>
                <li>Limpieza física y lógica</li>
                <li>Actualización de software</li>
              </ul>
              <a href="/contacto" class="text-accent-500 font-medium hover:underline">Solicitar cotización</a>
            </div>

            <!-- Armado y Configuración -->
            <div class="bg-white rounded-2xl shadow-lg p-6 text-center hover:shadow-xl transition">
              <div class="flex justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-20 h-20 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-settings-icon lucide-settings"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></svg>
              </div>
              <h4 class="text-xl font-semibold text-primary-800 mb-2">Armado y Configuración</h4>
              <p class="text-gray-600 mb-4">Configuramos tu equipo desde cero.</p>
              <ul class="text-sm text-gray-700 space-y-1 mb-4">
                <li>Armado físico y cableado</li>
                <li>Instalación de Windows</li>
                <li>Programas esenciales incluidos</li>
              </ul>
              <a href="/contacto" class="text-accent-500 font-medium hover:underline">Consultar detalles</a>
            </div>

            <!-- Paquete Escolar -->
            <div class="bg-white rounded-2xl shadow-lg p-6 text-center hover:shadow-xl transition">
              <div class="flex justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg"class="w-20 h-20 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-backpack-icon lucide-backpack"><path d="M4 10a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4v10a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2z"/><path d="M8 10h8"/><path d="M8 18h8"/><path d="M8 22v-6a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v6"/><path d="M9 6V4a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v2"/></svg>
              </div>
              <h4 class="text-xl font-semibold text-primary-800 mb-2">Paquete Escolar</h4>
              <p class="text-gray-600 mb-4">PC funcional para tareas escolares cotidianas.</p>
              <ul class="text-sm text-gray-700 space-y-1 mb-4">
                <li>Armado de PC básica</li>
                <li>Office, PDF, Zoom instalados</li>
                <li>Lista para usar</li>
              </ul>
              <a href="/contacto" class="text-accent-500 font-medium hover:underline">Ver más</a>
            </div>
          </div>
        </div>

  </section>
 
</Layout>
