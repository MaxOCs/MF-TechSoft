<script>
    // Función para manejar animaciones de entrada suaves
    function initAnimations() {
        const cards = document.querySelectorAll('.service-card');
        const heroContent = document.querySelector('.fade-in-up');
        
        // Animar el contenido del hero
        if (heroContent) {
            setTimeout(() => {
                heroContent.style.animationDelay = '0.2s';
                heroContent.classList.add('fade-in-up');
            }, 100);
        }
        
        // Observer para animar las tarjetas cuando entren en vista
        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }, index * 100);
                }
            });
        }, { 
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        });
        
        // Configurar las tarjetas para animación
        cards.forEach((card) => {
        const htmlCard = card as HTMLElement; // Cast a HTMLElement
        htmlCard.style.opacity = '0';
        htmlCard.style.transform = 'translateY(20px)';
        htmlCard.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(htmlCard);
    });
    }
    
    // Inicializar cuando el DOM esté listo
    document.addEventListener('DOMContentLoaded', initAnimations);
</script>