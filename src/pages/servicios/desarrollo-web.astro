---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from './../../components/ServiceCard.astro';
import PaquetesItem from '../../components/PaquetesItem.astro';
import presenciaImg from './../../assets/images/presencia-web.png';
import empresarialImg from './../../assets/images/petology.jpeg';
import prosuiteImg from './../../assets/images/spa.webp';

const paquetes = [
  {
    title: "Web Presencia",
    description: "Ideal para emprendedores que buscan tener presencia online de forma profesional.",
    img: presenciaImg,
    features: [
      "Diseño de hasta 5 secciones",
      "Responsive Design",
      "Formulario de contacto",
      "1 correo empresarial",
      "Dominio + SSL incluido"
    ]
  },
  {
    title: "Web Empresarial",
    description: "Pensado para negocios que buscan crecer con herramientas administrativas básicas.",
    img: empresarialImg,
    features: [
      "Hasta 6 secciones",
      "1 o 2 módulos administrativos",
      "Integración con WhatsApp",
      "3 correos empresariales",
      "Panel básico de administración"
    ]
  },
  {
    title: "Web ProSuite",
    description: "Desarrollo completo y a medida para empresas que necesitan un sistema personalizado.",
    img: prosuiteImg,
    features: [
      "Software a medida (ERP, CRM, etc.)",
      "Panel administrativo avanzado",
      "Usuarios con roles y permisos",
      "API Integrations",
      "10 correos empresariales"
    ]
  }
];

---

<Layout title="Desarrollo Web">
    <!-- Hero Section con Gradiente -->
    <section class="gradient-bg relative py-20">
        <!-- Elementos decorativos flotantes -->
        <div class="absolute top-20 left-10 w-20 h-20 bg-accent-300 rounded-full opacity-20 float-animation"></div>
        <div class="absolute top-40 right-20 w-16 h-16 bg-accent-400 rounded-full opacity-30 float-animation" style="animation-delay: -1.5s;"></div>
        <div class="absolute bottom-20 left-1/4 w-12 h-12 bg-accent-500 rounded-full opacity-25 float-animation" style="animation-delay: -3s;"></div>
        
        <div class="container mx-auto px-6 relative z-10">
            <div class="text-center text-white fade-in-up">
                <h1 class="text-5xl md:text-6xl font-bold mb-6">
                    Desarrollo Web
                </h1>
                <p class="text-xl md:text-2xl mb-8 text-accent-200 max-w-3xl mx-auto leading-relaxed">
                    Creamos experiencias digitales excepcionales con tecnologías modernas y diseño responsive que impulsan tu negocio hacia el éxito
                </p>
                <div class="inline-block pulse-glow rounded-full">
                    <button class="btn-primary bg-accent-500 hover:bg-accent-400 text-white px-8 py-4 rounded-full text-lg font-semibold">
                        Comenzar Proyecto
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Ondas decorativas -->
        <!-- <div class="absolute bottom-0 left-0 right-0">
           <svg viewBox="0 0 1200 120" class="w-full h-40 fill-blue-500">
                <path d="M0,50 C300,120 900,0 1200,50 L1200,120 L0,120 Z"></path>
            </svg>
        </div> -->
    </section>

    <!-- Sección Principal de Servicios -->
    <section class="py-20 bg-gray-100">
        <div class="container mx-auto px-6">
            <!-- Título de la sección -->
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                    Nuestros <span class="text-gradient">Servicios</span>
                </h2>
                <p class="text-xl text-gray-700 max-w-2xl mx-auto">
                    Soluciones web completas adaptadas a las necesidades específicas de tu negocio
                </p>
            </div>

            <!-- Grid de Features -->
            <div class="grid md:grid-cols-3 gap-8 mb-16">
                <!-- Landing Pages -->
                <div class="service-card bg-white rounded-2xl p-8 shadow-lg border border-gray-200 group">
                    <div class="relative mb-6">
                        <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-accent-500 rounded-2xl flex items-center justify-center mb-4 tech-item">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-3">Landing Pages</h3>
                        <p class="text-gray-700 mb-6">
                            Páginas de alta conversión diseñadas para captar leads y maximizar tus ventas con un diseño atractivo y llamadas a la acción efectivas.
                        </p>
                    </div>
                    
                    <div class="space-y-3">
                        <div class="feature-item flex items-center text-gray-700">
                            <svg class="w-5 h-5 text-accent-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span>Diseño optimizado para conversión</span>
                        </div>
                        <div class="feature-item flex items-center text-gray-700">
                            <svg class="w-5 h-5 text-accent-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span>Formularios de contacto avanzados</span>
                        </div>
                        <div class="feature-item flex items-center text-gray-700">
                            <svg class="w-5 h-5 text-accent-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span>Integración con herramientas de marketing</span>
                        </div>
                        <div class="feature-item flex items-center text-gray-700">
                            <svg class="w-5 h-5 text-accent-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span>Análisis de rendimiento incluido</span>
                        </div>
                    </div>
                </div>

                <!-- Sitios Corporativos -->
                <div class="service-card bg-white rounded-2xl p-8 shadow-lg border border-gray-200 group">
                    <div class="relative mb-6">
                        <div class="w-16 h-16 bg-gradient-to-br from-primary-600 to-accent-400 rounded-2xl flex items-center justify-center mb-4 tech-item">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M7 7h.01M7 3h.01"></path>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-3">Sitios Corporativos</h3>
                        <p class="text-gray-700 mb-6">
                            Presencia digital profesional que refleja la identidad de tu empresa con funcionalidades avanzadas y gestión de contenido fácil.
                        </p>
                    </div>
                    
                    <div class="space-y-3">
                        <div class="feature-item flex items-center text-gray-700">
                            <svg class="w-5 h-5 text-accent-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
