---
// components/ServiceCard.astro
const { service } = Astro.props;
import { Image } from 'astro:assets';
---

<div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 h-full flex flex-col border border-gray-200">
  <!-- Imagen más grande y mejor presentada -->
  <!-- Imagen que abarca todo el fondo -->
  <div class="h-96 bg-gradient-to-br from-primary-500 to-primary-600 relative overflow-hidden">
    <Image 
      src={service.img} 
      alt={service.title} 
      class="w-full h-full object-cover opacity-90"
      width={"400"}
      height={"300"}
    />
    <!-- Overlay para mejor legibilidad si necesitas texto encima -->
    <div class="absolute inset-0 bg-primary-600/20"></div>
  </div>
  
  <!-- Contenido -->
  <div class="p-6 flex-grow">
    <h3 class="text-xl font-bold text-primary-900 mb-3">{service.title}</h3>
    <p class="text-gray-700 mb-4">{service.description}</p>
    
    <ul class="space-y-2">
      {service.features.map((feature) => (
        <li class="flex items-center">
          <svg class="w-5 h-5 text-accent-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          {feature}
        </li>
      ))}
    </ul>
  </div>
  
  <!-- Botón -->
  <div class="px-6 pb-6">
    <a href="/contacto" class="text-accent-500 hover:text-accent-400 font-medium inline-flex items-center">
      Más detalles
      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</div>